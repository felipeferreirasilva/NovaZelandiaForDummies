<% include partials/header %>
<div class="jumbotron jumbotron-fluid text-center jb-title"><h2><strong>Incluir Pergunta</strong></h2></div>
<div class="container">
    <div class="jumbotron jb-newquestion">
        <form action="/questions" method="POST">
            <div class="form-group">
                <label for="titulo">Pergunta</label>
                <input type="text" class="form-control" id="titulo" name="title" placeholder="Digite o texto da pergunta" required>
            </div>      
            <div class="form-group">
                <label for="summernote">Resposta</label>
                <textarea id="summernote" name="answer"></textarea> 
            </div>
            <div class="form-group">
                <label for="categoria">Categoria</label>
                <select class="form-control" id="categoria" name="category">
                    <option value="Transferencia de Dinheiro">Transferencia de Dinheiro</option>
                    <option value="Chegando na Nova Zelandia">Chegando na Nova Zelandia</option>
                    <option value="Custo de Vida">Custo de Vida</option>
                    <option value="Moradia">Moradia</option>
                    <option value="Carro / Moto / CNH">Carro / Moto / CNH</option>
                    <option value="Banco">Banco</option>
                    <option value="Vistos">Vistos</option>
                    <option value="Trabalho">Trabalho</option>
                    <option value="Estudo">Estudo</option>
                    <option value="Transporte Publico">Transporte Publico</option>
                    <option value="Saude / Seguro Viagem / Seguro Saude">Saude / Seguro Viagem / Seguro Saude</option>
                    <option value="Planejamento Financeiro">Planejamento Financeiro</option>
                    <option value="Links e Indicacoes">Links e Indicações</option>
                    <option value="Outros">Outros</option>
                </select>
            </div>    
            <div class="g-recaptcha" data-sitekey="6LenkE4UAAAAAAENuNh5XicPOCYidiAQphHJdNt-" data-callback="enableBtn"></div>
            <button type="submit" class="btn btn-primary mt-3" id="insertq-sub-btn" disabled>Cadastrar</button>
        </form>
    </div>
</div>

<% include partials/footer %>